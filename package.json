{
  "name": "feast",
  "version": "1.0.0",
  "description": "recipe and dish aggregator",
  "main": "dist/server/application.js",
  "scripts": {
    "start:server": "tsc -w --outDir dist/server/ | nodemon --watch dist/server/",
    "start:web": "parcel src/web/index.html",
    "start:local": "scripts/startLocal.sh",
    "clean": "rimraf dist/",
    "compile": "tsc --noEmit -p .",
    "build": "yarn compile && parcel build src/web/index.html --out-dir dist/web",
    "build:dev": "cross-env NODE_ENV=dev parcel build src/web/index.html --out-dir dist/web --no-cache",
    "serve": "serve -s dist/",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "tslint 'src/**/*.ts' 'src/**/*.tsx' 'test/**/*.ts' 'test/**/*.tsx'",
    "lint:fix": "tslint 'src/**/*.ts' 'src/**/*.tsx' 'test/**/*.ts' 'test/**/*.tsx' --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddubson/feast.git"
  },
  "keywords": [
    "feast"
  ],
  "author": "Dmitriy Dubson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ddubson/feast/issues"
  },
  "homepage": "https://github.com/ddubson/feast#readme",
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "@testing-library/react": "^9.3.2",
    "@types/express": "^4.17.6",
    "@types/history": "^4.7.5",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.12.7",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@types/react-router-dom": "^5.1.2",
    "@types/shortid": "^0.0.29",
    "@types/testing-library__react": "^9.1.2",
    "axios-mock-adapter": "^1.17.0",
    "concurrently": "^5.2.0",
    "cross-env": "^6.0.3",
    "jest": "^24.5.0",
    "node-sass": "^4.12.0",
    "nodemon": "^2.0.3",
    "parcel": "^1.12.4",
    "rimraf": "^3.0.2",
    "sass": "^1.22.7",
    "serve": "^11.2.0",
    "ts-jest": "^24.0.2",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@auth0/auth0-spa-js": "^1.6.4",
    "axios": "^0.19.0",
    "express": "^4.17.1",
    "history": "^4.10.1",
    "immutability-helper": "^3.0.0",
    "purify-ts": "^0.13.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "semantic-ui-react": "^0.88.1",
    "shortid": "^2.2.14"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ]
  },
  "jest": {
    "bail": true,
    "rootDir": ".",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(css|less|sass|scss|svg|png)$": "jest-transform-stub"
    },
    "testRegex": "(/(src|test)/.*|(\\.|/)(test))\\.(test.tsx?)$",
    "testPathIgnorePatterns": [
      "/dist/"
    ]
  }
}
